<Contents@AKOnboardingItem>
    source: ""
    text: ""
    font_name: ''
    title: ""
    MDFloatLayout:
        canvas:
            Color:
                rgba: rgba('#FFFFFF')
            RoundedRectangle:
                pos: self.pos
                size: self.size
        Image:
            source: root.source
            pos_hint: {"center_x": .5, "y": .4}
            size_hint: .7, .6


        MDBoxLayout:
            orientation: "vertical"
            padding: dp(10)
            adaptive_height: True
            pos_hint: {"center_x": .5, "top": .5}
            spacing: dp(20)
            size_hint_x: .7
            canvas:
                Color:
                    rgba: rgba('#88ABE3')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                text: root.title
                bold: True
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_style: "H6"
                halign: "center"

            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_style: "Body1"
                halign: "center"
                text: root.text

<SplashScreen>
    on_pre_enter:
        app.root.get_screen('nav_layout_screen').ids.toolbar.clear_widget()

    on_leave: boarding.reset()
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        AKOnboarding:
            id: boarding

            on_finish: app.root.current ='login'
            circles_size: dp(15)
            circles_color: 1,1,1,1
            bottom_bar_color: rgba('#88ABE3')
            Contents:
                source: "assets/image/removebg1.png"
                title: "Welcome!"
                text: root.text
                font_name: 'assets/fonts/BebasNeue.ttf'

            Contents:
                source: "assets/image/splash2.png"
                title: "What is Facial Recognition?"
                text: root.text1

            Contents:
                source: "assets/image/splash3.png"
                title: "Relevance of Facial Recognition in Attendance System"
                text: root.text2


